        <None Remove="Drivers\**" />
        <SpecFlowFeatureFiles Remove="Drivers\**" />
        <SpecFlowObsoleteCodeBehindFiles Remove="Drivers\**" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="appsettings.json" />
    </ItemGroup>
    <ItemGroup>
