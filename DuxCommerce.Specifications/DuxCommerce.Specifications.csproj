            <DependentUpon>CreateStoreProfile.feature</DependentUpon>
        </Compile>
        <Compile Update="Features\Shipping\UpdateStoreProfile.feature.cs">
            <DependentUpon>UpdateStoreProfile.feature</DependentUpon>
        </Compile>
